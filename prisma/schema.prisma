generator client {
  provider = "prisma-client-js"
}

/**
 * THIS ERROR IS EXPECTED UNTIL MONGO IS UPDATED IN PRISMA.IO
 */

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//-------------------------------
//-------PREMIUM SETUP-----------
//-------------------------------

model GuildConfig {
  id                 String   @id @map("_id")
  welcomeStyle       String   @default("default")
  embed              Boolean  @default(false)
  customImageUrl     String?
  displayMemberCount Boolean  @default(true)
  updatedAt          DateTime @updatedAt
}

//-------------------------------
//------GIVEAWAY SYSTEM----------
//-------------------------------

model Giveaway {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  guildId    String   @unique
  channelId  String
  messageId  String   @unique
  host       String
  prize      String
  winnerSize Int
  winners    String[]
  endsAt     DateTime
  interval   Int      @default(0)
  entries    Entry[]
}

type Entry {
  userId    String
  createdAt DateTime @default(now())
}

//-------------------------------
//------TICKETS SYSTEM-----------
//-------------------------------

model UserTicket {
  id     String  @id @map("_id") //userId
  guilds Guild[]
}

type Guild {
  id      String //guildId
  tickets Ticket[]
}

type Ticket {
  channelId String
  open      Boolean  @default(true)
  createdAt DateTime @default(now())
}

//-------------------------------
//------SELFROLES SYSTEM---------
//-------------------------------

model SelfRoles {
  id       String    @id @map("_id")
  messages Message[]
}

type Message {
  id          String
  channelId   String
  title       String
  description String
  roles       Role[]
}

type Role {
  id   String
  name String
}

//-------------------------------
//------SYSTEMS SYSTEM-----------
//-------------------------------

model Systems {
  id      String   @id @map("_id")
  name    String   @unique
  systems System[]
}

type System {
  name     String
  enabled  Boolean
  channels Channel[]
}

type Channel {
  name     String
  id       String
  messages SMessage[]
  staffId  String?
}

type SMessage {
  id String
}

//-------------------------------
//------FEEDBACK SYSTEM----------
//-------------------------------

model Feedback {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  autorole  Feelings
  counting  Feelings
  giveaway  Feelings
  selfroles Feelings
  tickets   Feelings
  welcome   Feelings
}

type Feelings {
  likes    Int
  dislikes Int
  users    User[]
}

type User {
  userId   String
  userName String
  guildId  String
  feeling  String?
  comment  String?
}

//-------------------------------
//------COUNTING SYSTEM----------
//-------------------------------

model Counting {
  id        String @id @map("_id")
  count     Int
  lastUser  String
  lastCount Int
}

//-------------------------------
//------AUTOROLE SYSTEM----------
//-------------------------------

model Autorole {
  id     String @id @map("_id")
  roleId String
}

